<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:id="@+id/email_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tv_check_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_email"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/dmsans_bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tv_reset_password_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/reset_password_sent"
                android:textAlignment="center"
                android:textColor="@color/sub_title_grey_color"
                android:textSize="14sp"
                android:layout_marginBottom="3dp" />

            <TextView
                android:id="@+id/tv_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/sub_title_grey_color"
                android:textSize="14sp"
                android:layout_marginBottom="40dp" />

            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/iv_email_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email_verification_gif"
                    android:layout_marginBottom="60dp" />

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/verify"
                android:background="@drawable/rounded_button_background"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="16dp"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/resend_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_not_received_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:text="@string/not_received_email"
                    android:textAlignment="center"
                    android:textColor="@color/sub_title_grey_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:text="@string/resend"
                    android:fontFamily="@font/dmsans_bold"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
