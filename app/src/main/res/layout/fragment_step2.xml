<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Step2View">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Name Input Field -->
        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/first_name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_first_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edit_text_background"
            android:drawablePadding="8dp"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:paddingStart="40dp"
            android:hint="@string/enter_first_name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:inputType="textEmailAddress" />

        <!-- Last Name Input Field -->
        <TextView
            android:id="@+id/last_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/last_name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edit_text_background"
            android:drawablePadding="8dp"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:hint="@string/enter_last_name"
            android:paddingStart="40dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:inputType="textPersonName" />

        <!-- Bio Input Field -->
        <TextView
            android:id="@+id/password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/enter_bio"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_about_me"
            android:background="@drawable/rounded_edit_text_background"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="5dp"
            android:paddingBottom="100dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- LinkedIn URL Input Field -->
        <TextView
            android:id="@+id/username_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/enter_linkedin"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/linkedin_url"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edit_text_background"
            android:drawablePadding="8dp"
            android:textColorHint="@color/gray"
            android:padding="12dp"
            android:paddingStart="40dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:hint="@string/enter_linkedin"
            android:inputType="textPersonName" />

    </LinearLayout>

</ScrollView>
